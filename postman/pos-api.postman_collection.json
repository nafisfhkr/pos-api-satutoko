{
  "info": {
    "name": "POS API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {"key": "base_url", "value": "http://localhost:8000"},
    {"key": "token", "value": ""},
    {"key": "outlet_id", "value": "1"},
    {"key": "sale_id", "value": ""},
    {"key": "product_id", "value": "1"},
    {"key": "shift_id", "value": "1"},
    {"key": "idempotency_key", "value": "qris-unique-001"}
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "auth": {"type": "noauth"},
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"owner@example.com\",\n  \"password\": \"password\"\n}"
            },
            "url": "{{base_url}}/api/v1/auth/login"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "var json = pm.response.json();",
                  "if (json && json.data && json.data.token) {",
                  "  pm.collectionVariables.set('token', json.data.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{base_url}}/api/v1/auth/logout"
          }
        }
      ]
    },
    {
      "name": "Stocks",
      "item": [
        {
          "name": "List Stocks",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/outlets/{{outlet_id}}/stocks"
          }
        },
        {
          "name": "Adjust Stock",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"product_id\": {{product_id}},\n  \"qty\": 5,\n  \"reason\": \"stock opname\"\n}"
            },
            "url": "{{base_url}}/api/v1/outlets/{{outlet_id}}/stocks/adjust"
          }
        }
      ]
    },
    {
      "name": "Sales",
      "item": [
        {
          "name": "Create Sale (DRAFT)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"note\": \"penjualan pagi\"\n}"
            },
            "url": "{{base_url}}/api/v1/outlets/{{outlet_id}}/sales"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "var json = pm.response.json();",
                  "if (json && json.data && json.data.id) {",
                  "  pm.collectionVariables.set('sale_id', json.data.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Add/Update Sale Item",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"product_id\": {{product_id}},\n  \"qty\": 2,\n  \"unit_price\": 15000\n}"
            },
            "url": "{{base_url}}/api/v1/outlets/{{outlet_id}}/sales/{{sale_id}}/items"
          }
        },
        {
          "name": "Get Sale",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/outlets/{{outlet_id}}/sales/{{sale_id}}"
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Pay Cash",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cash_received\": 50000\n}"
            },
            "url": "{{base_url}}/api/v1/outlets/{{outlet_id}}/sales/{{sale_id}}/pay/cash"
          }
        },
        {
          "name": "Pay QRIS",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Idempotency-Key", "value": "{{idempotency_key}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reference_no\": \"QRIS-REF-001\"\n}"
            },
            "url": "{{base_url}}/api/v1/outlets/{{outlet_id}}/sales/{{sale_id}}/pay/qris"
          }
        }
      ]
    },
    {
      "name": "Shifts (stub)",
      "item": [
        {
          "name": "Open Shift (stub)",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/v1/outlets/{{outlet_id}}/shifts/open"
          }
        },
        {
          "name": "Close Shift (stub)",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/v1/outlets/{{outlet_id}}/shifts/{{shift_id}}/close"
          }
        }
      ]
    },
    {
      "name": "Reports (stub)",
      "item": [
        {
          "name": "Sales Summary (stub)",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/outlets/{{outlet_id}}/reports/sales-summary"
          }
        }
      ]
    }
  ]
}
